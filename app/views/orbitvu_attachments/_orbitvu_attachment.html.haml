.col-sm-4
  = link_to image_tag(orbitvu_attachment.image, class: 'img-responsive'), '#',
    class: 'orbitvu', data: { script: orbitvu_attachment.script,
    toggle: 'modal', target: "#orbitvu-#{orbitvu_attachment.id}" }

.modal.fade{ id: "orbitvu-#{orbitvu_attachment.id}" }
  .modal-dialog
    .modal-content
      .modal-header
        %button{type: :button, class: 'close', data: {dismiss: :modal}}
          %span{'aria-hidden' => true}= fa_icon 'times'
        %h4.modal-title Orbitvu Viewer
      .modal-body
        .orbitvu-viewer
          %div{id: "ovContent-xl#{orbitvu_attachment.id}",
               style: "background: url(#{orbitvu_attachment.image}) no-repeat center center #ffffff;width: 100%;height: 100%;"}
      .modal-footer
        %button{type: :button, class: 'btn btn-default', data: {dismiss: :modal}} Close
